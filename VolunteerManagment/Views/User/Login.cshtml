@model VolunteerManagment.Models.User

@section Styles {
    <link rel="stylesheet" href="~/css/Auth/login.css" asp-append-version="true" />
}

<div class="login-wrapper">
    <form asp-action="Login" method="post" class="login-form">
        <h2 class="login-title">Login</h2>

        <div class="form-group">
            <input asp-for="UserName" class="form-input" placeholder="Username" />
            <span asp-validation-for="UserName" class="validation-error"></span>
        </div>

        <div class="form-group">
            <input asp-for="Password" type="password" class="form-input" placeholder="Password" />
            <span asp-validation-for="Password" class="validation-error"></span>
        </div>

        <button type="submit" class="btn-login">Login</button>
    </form>
</div>