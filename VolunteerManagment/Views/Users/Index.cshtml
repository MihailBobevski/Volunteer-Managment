@model IEnumerable<VolunteerManagment.Models.User>

@{
    ViewData["Title"] = "Users";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Users/users.css" asp-append-version="true" />
}

<div class="users-wrapper">
    <h1 class="page-title">All Users</h1>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-create">+ Create New</a>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FName)</th>
            <th>@Html.DisplayNameFor(model => model.LName)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Phone)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
            <th class="text-end">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FName</td>
                <td>@item.LName</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.CreatedAt.ToShortDateString()</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-edit">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>