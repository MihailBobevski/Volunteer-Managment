@model List<VolunteerManagment.Models.EventTask>

<h2>User's Tasks</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Task Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Deadline</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                    <td>@task.Status</td>
                    <td>@task.Deadline.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No tasks found for this user.</p>
}

<a class="btn btn-secondary mt-3" asp-controller="Events" asp-action="Index">
    Back to Events
</a>
