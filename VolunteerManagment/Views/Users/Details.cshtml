@model VolunteerManagment.Models.User

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.UserId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<h3>Events Volunteered</h3>

<table class="table">
    <thead>
    <tr>
        <th>Event Title</th>
        <th>Location</th>
        <th>Event Date</th>
        <th>View Tasks</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var ve in (List<VolunteerManagment.Models.VolunteerEvent>)ViewBag.VolunteerEvents)
    {
        <tr>
            <td>@ve.Event.Title</td>
            <td>@ve.Event.Location</td>
            <td>@ve.Event.Date.ToShortDateString()</td>
            <td>
                <a class="btn btn-primary" asp-controller="Users" asp-action="UserTasks" asp-route-userId="@ve.UserId" asp-route-eventId="@ve.EventId">
                    View Tasks
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-controller="Users" asp-action="Index"  class="btn btn-secondary mt-3">← Back to Users</a>
<a asp-controller="Events" asp-action="Index"  class="btn btn-secondary mt-3">← Back to Events</a>
