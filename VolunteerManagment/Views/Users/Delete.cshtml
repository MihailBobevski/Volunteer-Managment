@model VolunteerManagment.Models.User

@{
    ViewData["Title"] = "Delete User";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Events/crud.css" asp-append-version="true" />
}

<div class="create-page-wrapper">
    <h2 class="page-title">Delete User</h2>
    <p class="subtitle text-danger">Are you sure you want to delete this user?</p>

    <div class="form-container">
        <dl class="row">
            <dt class="col-sm-4">First Name</dt>
            <dd class="col-sm-8">@Model.FName</dd>

            <dt class="col-sm-4">Last Name</dt>
            <dd class="col-sm-8">@Model.LName</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Phone</dt>
            <dd class="col-sm-8">@Model.Phone</dd>

            <dt class="col-sm-4">Created At</dt>
            <dd class="col-sm-8">@Model.CreatedAt.ToShortDateString()</dd>
        </dl>

        <form asp-action="Delete" method="post" class="text-center mt-4">
            <input type="hidden" asp-for="UserId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>