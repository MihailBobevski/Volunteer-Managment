@model VolunteerManagment.Models.EventTask

@{
    ViewData["Title"] = "Delete Task";
}

<h3>Are you sure you want to delete this task?</h3>
<div>
    <h4>Task: @Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Deadline</dt>
        <dd class="col-sm-10">@Model.Deadline.ToShortDateString()</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="TaskId" />
        <input type="hidden" asp-for="EventId" /> 
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Events" asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-secondary">Cancel</a>
    </form>
</div>