@model VolunteerManagment.Models.EventTask

@{
    ViewData["Title"] = "Delete Task";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Events/crud.css" asp-append-version="true" />
}

<div class="create-page-wrapper">
    <h2 class="page-title">Delete Task</h2>
    <p class="subtitle text-danger">Are you sure you want to delete this task?</p>

    <div class="form-container">
        <h4 class="mb-3">Task: @Model.Title</h4>
        <dl class="row">
            <dt class="col-sm-4">Description</dt>
            <dd class="col-sm-8">@Model.Description</dd>

            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">@Model.Status</dd>

            <dt class="col-sm-4">Deadline</dt>
            <dd class="col-sm-8">@Model.Deadline.ToShortDateString()</dd>
        </dl>

        <form asp-action="Delete" method="post" class="text-center mt-4">
            <input type="hidden" asp-for="TaskId" />
            <input type="hidden" asp-for="EventId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-controller="Events" asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>