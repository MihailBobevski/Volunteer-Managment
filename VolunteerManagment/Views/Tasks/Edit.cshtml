@model VolunteerManagment.Models.EventTask

@{
    ViewData["Title"] = "Edit Task";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Events/crud.css" asp-append-version="true" />
}

<div class="create-page-wrapper">
    <h2 class="page-title">Edit Task</h2>

    <div class="form-container">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="TaskId" />
            <input type="hidden" asp-for="EventId" />

            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Deadline"></label>
                <input asp-for="Deadline" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Status"></label>
                <select asp-for="Status" class="form-control">
                    <option>Pending</option>
                    <option>Completed</option>
                    <option>Cancelled</option>
                </select>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-controller="Events" asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>