@model List<VolunteerManagment.Models.Event>

@{
    var role = ViewBag.Role as string;
    ViewData["Title"] = "Active Events";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p>No active events at the moment.</p>
}
else
{
    <div class="row">
        @foreach (var ev in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">@ev.Title</h5>
                        <p class="card-text">@ev.Description</p>
                        <p><strong>Date:</strong> @ev.Date.ToShortDateString()</p>
                        <p><strong>Location:</strong> @ev.Location</p>
                        <p><strong>Organizer:</strong> @(ev.Organizer != null ? ev.Organizer.UserName : "Unknown")</p>
                        <a href="@Url.Action("Details", "Home", new { id = ev.EventId })" class="btn btn-primary btn-sm mt-2">View</a>
                    </div>
                </div>
            </div>
        }
    </div>
}