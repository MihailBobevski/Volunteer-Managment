@model VolunteerManagment.Models.Event

@{
    var userId = int.Parse(Context.Session.GetString("UserId"));
    var role = Context.Session.GetString("Role");
}

<h2>@Model.Title</h2>
<p>@Model.Description</p>
<p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
<p><strong>Location:</strong> @Model.Location</p>
<p><strong>Status:</strong> @Model.Status</p>

<h4 class="mt-4">Tasks</h4>

@if (!Model.Tasks.Any())
{
    <p>This event has no tasks.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var task in Model.Tasks)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.Status</td>
                <td>
                    @if (task.AssignedTo == null && Model.Status == "Active" && role == "User")
                    {
                        <form asp-controller="Home" asp-action="SignUpForTask" method="post">
                            <input type="hidden" name="taskId" value="@task.TaskId" />
                            <input type="hidden" name="eventId" value="@Model.EventId" />
                            <button type="submit" class="btn btn-success btn-sm">Sign Up</button>
                        </form>
                    }
                    else if (task.AssignedTo == userId)
                    {
                        if (Model.Status == "Completed")
                        {
                            <span class="text-muted">You were assigned</span>
                        }
                        else
                        {
                            <span class="text-success">You're assigned</span>
                        }
                    }
                    else if (task.User != null)
                    {
                        <span class="text-muted">Assigned to @task.User.UserName</span>
                    }
                    else
                    {
                        <span>-</span>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}
