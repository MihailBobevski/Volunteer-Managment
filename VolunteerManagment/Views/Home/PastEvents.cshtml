@model List<VolunteerManagment.Models.Event>

@{
    var role = ViewBag.Role as string;
}

<h2>Past Events You Participated In</h2>

@if (!Model.Any())
{
    <p>You haven't participated in any completed events yet.</p>
}
else
{
    <div class="row">
        @foreach (var ev in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@ev.Title</h5>
                        <p class="card-text">@ev.Description</p>
                        <p><strong>Date:</strong> @ev.Date.ToShortDateString()</p>
                        <p><strong>Location:</strong> @ev.Location</p>
                        <p><strong>Organizer:</strong> @ev.Organizer?.UserName</p>
                        <a href="@Url.Action("Details", "Home", new { id = ev.EventId })" class="btn btn-outline-secondary btn-sm">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}