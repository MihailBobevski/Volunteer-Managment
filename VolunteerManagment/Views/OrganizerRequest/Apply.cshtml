@using Microsoft.EntityFrameworkCore.Metadata.Internal
@{
    ViewBag.Title = "Apply for Organizer";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Requests/apply.css" asp-append-version="true" />
}

<div class="apply-section">
    <h2 class="section-title">Apply for Organizer</h2>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info">@ViewBag.Message</div>
    }

    <form method="post" class="apply-form">
        <div class="form-group">
            <label for="motivationalLetter">Motivational Letter</label>
            <textarea id="motivationalLetter" name="motivationalLetter" class="form-control" rows="6" required></textarea>
        </div>
        <button type="submit" class="btn-submit">Submit Application</button>
    </form>
</div>