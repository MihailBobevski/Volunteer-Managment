@model List<VolunteerManagment.Models.Report>

@{
    ViewData["Title"] = "All Reports";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Reports/allreports.css" asp-append-version="true" />
}

<div class="reports-wrapper">
    <h2 class="page-title">All Reports</h2>

    <table class="table">
        <thead>
        <tr>
            <th>Event</th>
            <th>Written By</th>
            <th>Date</th>
            <th class="text-end">View</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var report in Model)
        {
            <tr>
                <td>@report.Event?.Title</td>
                <td>@report.User?.UserName (@report.User?.Email)</td>
                <td>@report.CreatedAt.ToLocalTime().ToString("g")</td>
                <td class="text-end">
                    <a asp-controller="Reports"
                       asp-action="View"
                       asp-route-eventId="@report.EventId"
                       class="btn btn-sm btn-info">
                        View Full
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>