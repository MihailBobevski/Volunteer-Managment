@model IEnumerable<VolunteerManagment.Models.Event>

@{
    ViewData["Title"] = "My Events";
}

<h2>My Events</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Event</a>
</p>

@{
    var activeEvents = Model.Where(e => e.Status == "Active").ToList();
    var completedEvents = Model.Where(e => e.Status == "Completed").ToList();
    var cancelledEvents = Model.Where(e => e.Status == "Cancelled").ToList();
}

<h4 class="mt-4 text-success">Active Events</h4>
@if (activeEvents.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in activeEvents)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.EventId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.EventId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.EventId">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No active events.</p>
}

<h4 class="mt-4 text-primary">Completed Events</h4>
@if (completedEvents.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in completedEvents)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.EventId">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No completed events.</p>
}

<h4 class="mt-4 text-danger">Cancelled Events</h4>
@if (cancelledEvents.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in cancelledEvents)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.EventId">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No cancelled events.</p>
}
