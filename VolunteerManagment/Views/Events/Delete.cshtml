@model VolunteerManagment.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Events/crud.css" asp-append-version="true" />
}

<div class="create-page-wrapper">
    <h1 class="page-title">Delete Event</h1>
    <h4 class="subtitle text-danger">Are you sure you want to delete this event?</h4>

    <div class="form-container">
        <dl class="row">
            <dt class="col-sm-4">Title</dt>
            <dd class="col-sm-8">@Model.Title</dd>

            <dt class="col-sm-4">Description</dt>
            <dd class="col-sm-8">@Model.Description</dd>

            <dt class="col-sm-4">Category</dt>
            <dd class="col-sm-8">@Model.Category</dd>

            <dt class="col-sm-4">Location</dt>
            <dd class="col-sm-8">@Model.Location</dd>

            <dt class="col-sm-4">Date</dt>
            <dd class="col-sm-8">@Model.Date.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-4">Organizer</dt>
            <dd class="col-sm-8">@Model.Organizer?.Email</dd>
        </dl>

        <form asp-action="Delete" method="post" class="text-center mt-4">
            <input type="hidden" asp-for="EventId" />
            <input type="submit" value="Delete" class="btn-danger" />
            <a asp-action="Index" class="back-link d-inline-block ms-3">← Back to List</a>
        </form>
    </div>
</div>